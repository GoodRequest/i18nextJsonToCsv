{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
			"node_modules/@types"
		]
  },
  "include": [
		"./scripts/**/*",
	],
  "exclude": [
		"node_modules",
		"dist"
    ]
}
